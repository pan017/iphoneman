@{
    ViewBag.Title = "Список товаров";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int a = 0;
}

<h2>Список товаров</h2>


@foreach (var item in ViewBag.ProductList)
{
    a++;
    if (a % 2 != 0)
    {
        <div class="product_box margin_r20">
            <p>@item.Manufaturer @item.PhoneModel</p>
            <img src="@item.PhotoUrl" height="170px" />
            <p class="price">Цена: <span>@item.Price бел.руб</span></p>
            @Html.ActionLink("Редактировать", "EditItem", "AdminMenu", new { id = item.id }, null) &nbsp;
            @Html.ActionLink("Удалить", "DeleteItem", "AdminMenu", new { id = item.id }, null)
        </div>


    }
    else
    {
        <div class="product_box">
            <p>@item.Manufaturer @item.PhoneModel</p>
            <img src="@item.PhotoUrl" height="170px" />
            <p class="price">Цена: <span>@item.Price бел.руб</span></p>
            @Html.ActionLink("Редактировать", "EditItem", "AdminMenu", new { id = item.id }, null) &nbsp;
            @Html.ActionLink("Удалить", "DeleteItem", "AdminMenu", new { id = item.id }, null)
        </div>
        <div class="cleaner"></div>

    }
}
@if (ViewBag.ProductList.Count % 2 != 0)
{
    <div class="cleaner"></div>
}